<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/relative_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    android:padding="@dimen/_5sdp"
    >

    <RelativeLayout
        android:id="@+id/relative_view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp"
        android:background="@drawable/layout_rectangle_gray"
        >

        <ImageView
            android:id="@+id/imgproduct"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:src="@drawable/img_booktable"
            android:layout_margin="2dp" />


        <TextView
            android:id="@+id/txtproductname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_toEndOf="@+id/imgproduct"
            android:text="Pizza"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />


        <LinearLayout
            android:id="@+id/lyt_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtproductname"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginStart="@dimen/_3sdp"
            android:layout_marginBottom="2dp"
            android:layout_toEndOf="@+id/imgproduct"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_2sdp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    android:fontFamily="@font/generalsansregular"
                    android:textColor="@color/text_gray2"
                    android:text="Hotel :"
                    android:textSize="14sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:padding="1dp"
                    android:fontFamily="@font/generalsansregular"
                    android:textColor="@color/text_gray2"
                    android:text="StartBucks"
                    android:textSize="14sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_2sdp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    android:fontFamily="@font/generalsansregular"
                    android:textColor="@color/text_gray2"
                    android:text="Hotel :"
                    android:textSize="14sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:padding="1dp"
                    android:fontFamily="@font/generalsansregular"
                    android:textColor="@color/text_gray2"
                    android:text="StartBucks"
                    android:textSize="14sp"
                    />

            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/txttotalkm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="2 St"
            android:layout_gravity="center"
            android:textColor="@color/text_colorblack"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lyt_linear"
            android:layout_marginStart="@dimen/_70sdp">


            <TextView
                android:id="@+id/txt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:fontFamily="@font/generalsansmedium"
                android:text="@string/qty"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <RelativeLayout
                android:id="@+id/view_relative"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_28sdp">

                <TextView
                    android:id="@+id/minus1"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:background="@drawable/layout_rectangle_darkgray"
                    android:gravity="center"
                    android:text="-"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt3"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:layout_toEndOf="@+id/minus1"
                    android:gravity="center"
                    android:text="1"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/plus_btn"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:layout_toEndOf="@+id/txt3"
                    android:background="@drawable/layout_rectangle_darkgray"
                    android:gravity="center"
                    android:text="+"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/_10sdp">

                <ImageView
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:src="@drawable/pencilsquare_green" />

                <ImageView
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:layout_marginStart="@dimen/_35sdp"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:src="@drawable/delete" />

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EBEBEB"
        android:orientation="horizontal"
        android:layout_below="@+id/relative_view2"
        android:layout_marginTop="@dimen/_1sdp"
        android:visibility="gone"
        />

</RelativeLayout>

