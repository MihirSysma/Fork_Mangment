<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/people" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/bg_selectlang" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/splash_logo"
        android:layout_marginTop="@dimen/_40sdp"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/_30ssp"
        />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="@dimen/_10ssp">


        <Button
            android:id="@+id/BtnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5ssp"
            android:layout_marginEnd="@dimen/_5ssp"
            android:background="@drawable/layout_rectangle_2"
            android:fontFamily="@font/generalsansmedium"
            android:padding="@dimen/_5ssp"
            android:text="@string/button_login"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/BtnReg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5ssp"
            android:layout_marginTop="@dimen/_50ssp"
            android:layout_marginEnd="@dimen/_5ssp"
            android:background="@color/orange"
            android:fontFamily="@font/generalsansmedium"
            android:padding="@dimen/_5ssp"
            android:text="@string/button_reg"
            android:textAllCaps="false"
            android:textColor="@color/text_colorblack"
            android:textSize="16sp"
            app:backgroundTint="@null" />

        <TextView
            android:id="@+id/TextGuest"
            style="?android:listSeparatorTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/BtnReg"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_15ssp"
            android:text="@string/enter_as_guest"
            android:textAlignment="center"
            android:textColor="@color/text_colorblack"
            android:textSize="17sp" />



    </RelativeLayout>


</FrameLayout>