<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_120sdp"
    android:layout_alignParentBottom="true"
    app:cardElevation="7dp"
    app:cardCornerRadius="5dp"
    app:cardBackgroundColor="@color/white"
    app:cardMaxElevation="7dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_5sdp"
        android:padding="@dimen/_5sdp"
        >

        <TextView
            android:id="@+id/txt_otpenter"
            style="?android:listSeparatorTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:text="@string/conformsg"
            android:fontFamily="@font/generalsanssemibold"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="@dimen/_14ssp"
            android:textColor="@color/text_colorblack"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:padding="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        >

        <Button
            android:id="@+id/btn_cancel"
            style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/_40sdp"
            android:background="@drawable/layout_rectangle_red"
            android:fontFamily="@font/generalsansmedium"
            android:text="No"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:textStyle="bold"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/btn_yes"
            style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/_40sdp"
            android:background="@drawable/layout_rectangle"
            android:fontFamily="@font/generalsansmedium"
            android:text="@string/yes"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:textStyle="bold"
            app:backgroundTint="@null" />


    </RelativeLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>