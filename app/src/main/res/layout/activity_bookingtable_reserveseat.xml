<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/maskgroup"
        android:scaleType="fitXY" />


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_70sdp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="7dp"
        app:cardElevation="7dp"
        app:cardMaxElevation="7dp"
        android:padding="@dimen/_5sdp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:fontFamily="@font/generalsanssemibold"
                            android:padding="@dimen/_3sdp"
                            android:text="@string/booking_table"
                            android:textColor="@color/text_colorblack"
                            android:textSize="22sp" />


                    </LinearLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/layout_rectangle_gray"
                        android:layout_margin="@dimen/_5sdp"
                        android:padding="@dimen/_5sdp">

                        <ImageView
                            android:id="@+id/imgproduct"
                            android:layout_width="@dimen/_65sdp"
                            android:layout_height="@dimen/_65sdp"
                            android:layout_centerVertical="true"
                            android:layout_margin="3dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/img_booktable" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:orientation="horizontal">


                            <RatingBar
                                android:id="@+id/rating_bar"
                                style="@style/CustomRatingBarStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_14sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:rating="5" />

                            <TextView
                                android:id="@+id/txt_ratingno"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:text="2"
                                android:textColor="@color/black"
                                android:textSize="13sp" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/txtproductname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_7sdp"
                            android:layout_toEndOf="@+id/imgproduct"
                            android:text="Starbucks"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:textStyle="bold" />


                        <LinearLayout
                            android:id="@+id/lyttime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txtproductname"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:layout_marginBottom="2dp"
                            android:layout_toEndOf="@+id/imgproduct"
                            android:orientation="vertical">


                            <TextView
                                android:id="@+id/txt_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="1dp"
                                android:text="Open Till: 1.00 Pm"
                                android:textColor="#9C9A9A" />

                            <TextView
                                android:id="@+id/txt_distance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/generalsansregular"
                                android:padding="1dp"
                                android:text="Walk in 4 Tb, Pickup 8 Min"
                                android:textColor="#9C9A9A" />


                        </LinearLayout>

                        <TextView
                            android:id="@+id/txttotalkm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:text="2 Km"
                            android:textColor="@color/text_colorblack" />


                    </RelativeLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:fontFamily="@font/generalsanssemibold"
                            android:padding="@dimen/_3sdp"
                            android:text="@string/your_reserved_seats"
                            android:textColor="@color/text_colorblack"
                            android:textSize="22sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:padding="@dimen/_2sdp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/generalsansmedium"
                                android:text="Indoor :"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_8sdp"
                                android:text="7 Seats"
                                android:textColor="@color/text_gray2"
                                android:textSize="15sp" />

                            <TextView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:background="@drawable/black_rect"
                                android:layout_marginStart="@dimen/_100sdp"
                                android:textAlignment="center"
                                android:padding="@dimen/_2sdp"
                                android:text="00"
                                android:textColor="@color/white"
                                android:textSize="15sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/generalsansmedium"
                                android:padding="@dimen/_2sdp"
                                android:text=":"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                            <TextView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:background="@drawable/black_rect"
                                android:layout_marginStart="@dimen/_1sdp"
                                android:textAlignment="center"
                                android:padding="@dimen/_2sdp"
                                android:text="25"
                                android:textColor="@color/white"
                                android:textSize="15sp" />

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/pencil"
                                android:layout_marginStart="@dimen/_7sdp"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:padding="@dimen/_2sdp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/generalsansmedium"
                                android:text="Time :"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_8sdp"
                                android:text="April 14, 6.00 Pm"
                                android:textColor="@color/text_gray2"
                                android:textSize="15sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_100sdp"
                                android:text="Sar 14"
                                android:textColor="@color/text_gray2"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:fontFamily="@font/generalsanssemibold"
                                android:padding="@dimen/_3sdp"
                                android:text="@string/select_food"
                                android:textColor="@color/text_colorblack"
                                android:textSize="20sp" />

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_baseline_search_24"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:layout_marginStart="@dimen/_120sdp"
                                />

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/ic_baseline_filter_alt_24"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_4sdp"

                                />





                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_8sdp">

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:background="@drawable/round_corner_toggle"
                                android:hint="Some Text"
                                android:textSize="15sp"
                                android:maxLines="1"
                                android:inputType="text"
                                android:textColor="@color/black"
                                android:padding="@dimen/_3sdp"
                                android:textColorHint="@color/black" />

                        </LinearLayout>

                        <!-- Tab View -->

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >

                            <com.google.android.material.tabs.TabLayout
                                android:id="@+id/tabLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:tabMode="fixed"
                                android:background="@color/white"
                                app:tabIconTint="@color/black"
                                app:tabIndicatorColor="@color/red"
                                app:tabSelectedTextColor="@color/red"
                                app:tabTextColor="@color/black"
                                app:tabIndicatorHeight="2dp"
                                app:tabTextAppearance="@style/TabLayoutTextStyle"
                                />

                            <androidx.viewpager2.widget.ViewPager2
                                android:id="@+id/viewPager"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>


                        </LinearLayout>

                        <!-- Tab View End -->

                        <!-- Recyclerview Layout start -->
                        <LinearLayout
                            android:id="@+id/linear_listview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            >

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/table_recycleview"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                />

                        </LinearLayout>
                        <!-- Recyclerview Layout end -->

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="#EBEBEB"
                        android:orientation="horizontal" />


                    <!-- Bottom Layout start -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/_3sdp">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_15sdp"
                            android:padding="@dimen/_3sdp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/generalsansmedium"
                                android:padding="@dimen/_2sdp"
                                android:text="For Booking"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="@dimen/_2sdp"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:fontFamily="@font/generalsanssemibold"
                                android:text="Sar 4"
                                android:textColor="@color/black"
                                android:textSize="14sp" />


                        </RelativeLayout>


                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_15sdp"
                            android:padding="@dimen/_3sdp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/_2sdp"
                                android:text="For Food"
                                android:fontFamily="@font/generalsansmedium"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="@dimen/_2sdp"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:fontFamily="@font/generalsanssemibold"
                                android:text="Sat 14"
                                android:textColor="@color/black"
                                android:textSize="14sp" />


                        </RelativeLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:padding="@dimen/_10sdp"
                            >

                            <Button
                                android:id="@+id/btn_view_cart"
                                android:layout_width="@dimen/_230sdp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10ssp"
                                android:layout_marginEnd="@dimen/_10ssp"
                                android:layout_gravity="center"
                                android:background="@drawable/layout_rectangle_2"
                                android:fontFamily="@font/generalsansmedium"
                                android:text="@string/view_cart"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                app:backgroundTint="@null" />


                        </LinearLayout>


                    </LinearLayout>

                    <!-- Bottom Layout end -->


                </LinearLayout>

            </LinearLayout>

        </ScrollView>


    </androidx.cardview.widget.CardView>

</FrameLayout>


