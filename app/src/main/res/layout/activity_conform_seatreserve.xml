<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        android:background="@drawable/conformation_back"
        android:scaleType="fitXY" />


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_70sdp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="7dp"
        app:cardElevation="7dp"
        app:cardMaxElevation="7dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/light_green_righticon" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/generalsansmedium"
                    android:gravity="center_horizontal"
                    android:text="@string/conformation"
                    android:textColor="@color/black"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/txt_order_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/generalsansmedium"
                    android:gravity="center_horizontal"
                    android:text="@string/order_id_865231"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <ImageView
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:src="@drawable/ic_baseline_qr_code_24" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@color/light_white"
                    android:orientation="horizontal" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal"
                    android:padding="@dimen/_2sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/generalsansregular"
                        android:padding="1dp"
                        android:text="@string/name"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/txt_customername"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:fontFamily="@font/generalsansregular"
                        android:padding="1dp"
                        android:text="@string/starbucks"
                        android:textColor="@color/gray_shade_3" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:orientation="horizontal"
                    android:padding="@dimen/_2sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/generalsansregular"
                        android:padding="1dp"
                        android:text="@string/phone"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/txt_mobileno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:fontFamily="@font/generalsansregular"
                        android:padding="1dp"
                        android:text="8745859654"
                        android:textColor="@color/gray_shade_3" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:orientation="horizontal"
                    android:padding="@dimen/_2sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/generalsansregular"
                        android:padding="1dp"
                        android:text="@string/add"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/txt_customer_add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:fontFamily="@font/generalsansregular"
                        android:padding="1dp"
                        android:text="B r Road Vasanat vihar near Circle"
                        android:textColor="@color/gray_shade_3" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="#EBEBEB"
                    android:orientation="horizontal" />



                <RelativeLayout
                    android:id="@+id/relative_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:background="@drawable/layout_rectangle_gray"
                    android:padding="@dimen/_5sdp">

                    <ImageView
                        android:id="@+id/imgrestro"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_marginEnd="@dimen/_3sdp"
                        android:layout_marginBottom="@dimen/_3sdp"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_booktable" />

                    <LinearLayout
                        android:id="@+id/linear_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_50sdp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/txt_hotelname"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_7sdp"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:text="@string/starbucks"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:orientation="horizontal">


                            <RatingBar
                                android:id="@+id/rating_bar"
                                style="@style/CustomRatingBarStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_14sdp"
                                android:rating="5" />

                            <TextView
                                android:id="@+id/txt_ratingno"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:layout_marginTop="@dimen/_1sdp"
                                android:text="2"
                                android:textColor="@color/black"
                                android:textSize="13sp" />

                        </LinearLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/linear_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/linear_1"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_marginBottom="2dp"
                        android:layout_toEndOf="@+id/imgrestro"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:id="@+id/lyttime"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">


                            <TextView
                                android:id="@+id/txt_endtime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/generalsansregular"
                                android:padding="1dp"
                                android:text="@string/open_till_1_00_pm"
                                android:textColor="@color/text_gray2"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/txt_distance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/generalsansregular"
                                android:padding="1dp"
                                android:text="@string/walk_in_4_tb_pickup_8_min"
                                android:textColor="@color/text_gray2"
                                android:textSize="14sp" />


                        </LinearLayout>

                        <TextView
                            android:id="@+id/txt_totalkm"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_weight="1"
                            android:fontFamily="@font/generalsansregular"
                            android:gravity="end"
                            android:text="@string/_2_km"
                            android:textColor="@color/text_colorblack"
                            android:textSize="13sp" />


                    </LinearLayout>


                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@color/light_white"
                    android:orientation="horizontal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:fontFamily="@font/generalsanssemibold"
                        android:padding="@dimen/_3sdp"
                        android:text="@string/your_reserved_seats"
                        android:textColor="@color/text_colorblack"
                        android:textSize="20sp" />


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/linear_layt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal"
                    android:padding="@dimen/_2sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/generalsansregular"
                        android:padding="1dp"
                        android:text="@string/indoor"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/txt_indoor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:fontFamily="@font/generalsansregular"
                        android:padding="1dp"
                        android:text="Lable"
                        android:textColor="@color/gray_shade_3" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:padding="@dimen/_2sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:fontFamily="@font/generalsansregular"
                        android:padding="1dp"
                        android:text="@string/time"
                        android:textColor="@color/black"

                        android:layout_toStartOf="@id/txtview_rank"
                        />

                    <TextView
                        android:id="@+id/txt_timeview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_40sdp"
                        android:fontFamily="@font/generalsansregular"
                        android:padding="1dp"
                        android:text="lable"
                        android:textColor="@color/gray_shade_3" />

                    <TextView
                        android:id="@+id/txtview_rank"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="center_horizontal|end"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:fontFamily="@font/generalsansregular"
                        android:padding="1dp"
                        android:text="2st"
                        android:textColor="@color/black" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:orientation="horizontal"
                    android:padding="@dimen/_2sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/generalsansregular"
                        android:padding="1dp"
                        android:text="@string/note_the_table_is_reserved_up_to_6pm_only"
                        android:textColor="@color/orange" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:fontFamily="@font/generalsansmedium"
                        android:text="@string/rules"
                        android:textColor="@color/black"
                        android:layout_toStartOf="@id/img"
                        android:layout_alignParentStart="true"
                        android:textSize="18sp" />

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/_25sdp"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:padding="@dimen/_2sdp"
                        android:src="@drawable/nosmokeing" />

                    <ImageView
                        android:id="@+id/img"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="@dimen/_17sdp"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:padding="@dimen/_2sdp"
                        android:src="@drawable/parking" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_rule"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/generalsansregular"
                        android:text="@string/there_are_no_rules"
                        android:textColor="@color/gray_shade_3" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:fontFamily="@font/generalsansmedium"
                        android:text="@string/dress_code"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_dresscode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/generalsansregular"
                        android:text="@string/classic_suit"
                        android:textColor="@color/gray_shade_3" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@color/light_white"
                    android:orientation="horizontal" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:padding="@dimen/_3sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/generalsanssemibold"
                        android:text="@string/paid_total"
                        android:textColor="@color/black"
                        android:layout_toStartOf="@id/txt_totalPaidamt"
                        android:layout_alignParentStart="true"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/txt_totalPaidamt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:fontFamily="@font/generalsanssemibold"
                        android:text="@string/sat_14"
                        android:textColor="@color/black"
                        android:textSize="14sp" />


                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@color/light_white"
                    android:orientation="horizontal" />

                <Button
                    android:id="@+id/btn_payment_conform"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10ssp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10ssp"
                    android:background="@drawable/layout_rectangle_2"
                    android:fontFamily="@font/generalsansmedium"
                    android:padding="@dimen/_5ssp"
                    android:text="@string/reserve_the_food"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:backgroundTint="@null" />

                <Button
                    android:id="@+id/btn_reserve_food"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10ssp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10ssp"
                    android:background="@drawable/layout_rectangle_orange"
                    android:fontFamily="@font/generalsansmedium"
                    android:padding="@dimen/_5ssp"
                    android:text="@string/reserve_the_food"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:backgroundTint="@null" />

                <TextView
                    android:id="@+id/txt_askhelp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:padding="@dimen/_5ssp"
                    android:textSize="16sp"
                    android:fontFamily="@font/generalsansmedium"
                    android:text="@string/ask_support"
                    android:textColor="@color/orange_2"
                    android:textAlignment="center"
                    />


            </LinearLayout>

        </ScrollView>


    </androidx.cardview.widget.CardView>

</FrameLayout>


