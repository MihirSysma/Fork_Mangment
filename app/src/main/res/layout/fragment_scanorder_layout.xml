<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_250sdp"
            android:background="@drawable/mask_group_2"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginStart="@dimen/_8sdp">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_baseline_menu_24"/>

        </RelativeLayout>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_100sdp"
            app:cardElevation="7dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardMaxElevation="7dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/generalsansmedium"
                    android:text="Full Guide For App Video"
                    android:textColor="@color/text_colorblack"
                    android:textSize="23sp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    />

                <TextView
                    android:id="@+id/txt"
                    android:gravity="start"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:padding="@dimen/_5sdp"
                    android:fontFamily="@font/generalsansregular"
                    android:textSize="16sp"
                    android:maxLines="7"
                    android:lines="7"
                    android:textColor="@color/text_colorblack"
                    android:text="Lorem ipsum dolor sit amet,consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat."
                    tools:ignore="HardcodedText"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_200sdp"
                    android:src="@drawable/video_img"
                    />

                <TextView
                    android:id="@+id/need_support"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:padding="@dimen/_5sdp"
                    android:textSize="16sp"
                    android:fontFamily="@font/generalsansregular"
                    android:text="@string/need_support"
                    android:textColor="@color/orange_2"
                    android:textAlignment="center"
                    />

                <TextView
                    android:id="@+id/need_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:padding="@dimen/_5ssp"
                    android:textSize="16sp"
                    android:fontFamily="@font/generalsansregular"
                    android:text="@string/need_to_contact_us"
                    android:textColor="@color/orange_2"
                    android:textAlignment="center"
                    />

                <TextView
                    android:id="@+id/reserve_table"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:padding="@dimen/_5ssp"
                    android:textSize="16sp"
                    android:fontFamily="@font/generalsansregular"
                    android:text="@string/reserve_table"
                    android:textColor="@color/orange_2"
                    android:textAlignment="center"
                    />

            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </FrameLayout>




</LinearLayout>