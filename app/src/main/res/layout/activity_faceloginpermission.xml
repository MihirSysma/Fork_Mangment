<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_400sdp"
        android:scaleType="fitXY"
        android:src="@drawable/faceid_back" />

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_alignParentBottom="true">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="7dp"
        app:cardElevation="7dp"
        app:cardMaxElevation="7dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_5ssp"
                android:fontFamily="@font/generalsanssemibold"
                android:text="@string/for_secure_and_faster_access_would_you_like_to_enable_face_id"
                android:textAlignment="center"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/text_colorblack"
                android:textSize="@dimen/_20ssp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_5ssp"
                android:padding="@dimen/_5sdp"
                android:lines="1"
                android:maxLines="1"
                android:text="@string/some_text_some_text_some_text_some_text"
                android:textAlignment="center"
                android:textColor="@color/text_gray2"
                android:textSize="@dimen/_16ssp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:orientation="vertical">


                <ImageView
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_120sdp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/group_2" />


            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="@dimen/_10ssp"
                android:padding="@dimen/_5ssp">

                <Button
                    android:id="@+id/btn_enable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5ssp"
                    android:layout_marginEnd="@dimen/_5ssp"
                    android:background="@drawable/layout_rectangle_2"
                    android:fontFamily="@font/generalsansmedium"
                    android:padding="@dimen/_5ssp"
                    android:text="@string/enable"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:backgroundTint="@null" />


            </RelativeLayout>

            <TextView
                android:id="@+id/txtSkip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_3ssp"
                android:padding="@dimen/_3ssp"
                android:textSize="16sp"
                android:fontFamily="@font/generalsansmedium"
                android:text="@string/skip"
                android:textStyle="bold"
                android:textColor="@color/orange_2"
                android:textAlignment="center"
                />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

   </LinearLayout>


</RelativeLayout>