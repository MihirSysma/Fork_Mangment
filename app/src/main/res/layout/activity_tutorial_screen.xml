<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_450sdp"
        android:orientation="vertical"
        android:background="@drawable/rect_bg_about">


        <ImageView
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_marginStart="@dimen/_8ssp"
            android:layout_marginTop="@dimen/_40ssp"
            android:src="@drawable/logo"
            />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:cardElevation="3dp"
        app:cardCornerRadius="3dp"
        app:cardBackgroundColor="@color/white"
        app:cardMaxElevation="3dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_250sdp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/generalsansmedium"
                android:text="@string/lorem_ipsum_door_sit_amet_adispacing"
                android:textColor="@color/text_colorblack"
                android:textSize="25sp"
                android:layout_marginTop="@dimen/_5ssp"
                android:textStyle="bold"
                android:textAlignment="center"
                />

            <TextView
                android:gravity="start"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginStart="@dimen/_5ssp"
                android:layout_marginEnd="@dimen/_5ssp"
                android:layout_marginBottom="@dimen/_5ssp"
                android:padding="@dimen/_5ssp"
                android:textSize="15sp"
                android:maxLines="7"
                android:lines="7"
                android:textColor="@color/text_colorblack"
                android:text="Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat."
                tools:ignore="HardcodedText"/>

            <TextView
                android:id="@+id/txtSkip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_5ssp"
                android:padding="@dimen/_5ssp"
                android:textSize="16sp"
                android:fontFamily="@font/generalsanssemibold"
                android:text="@string/skip"
                android:textStyle="bold"
                android:textColor="@color/orange_2"
                android:textAlignment="center"
                />


        </LinearLayout>

    </androidx.cardview.widget.CardView>






</RelativeLayout>