       <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
       <style name="TabLayoutStyle" parent="@android:style/TextAppearance.Widget.TabWidget">
           <item name="android:textSize">15sp</item>
           <item name="android:textAllCaps">false</item>
           <item name="android:textStyle">bold</item>
       </style>
       -->
       <!-- Customize your theme here. -->

    </style>

    <style name="CustomRatingBarStyle" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_rating</item>
        <item name="android:minHeight">15dip</item>
        <item name="android:maxHeight">47dip</item>
    </style>

    <style name="FullHeightDialog" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Theme.Custom" parent="Theme.AppCompat">
        <item name="windowActionBar">false</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat">
        <item name="colorAccent">@color/teal_200</item>
    </style>

    <style name="timePickerOrange">
        <item name="android:textColorPrimary">@color/orange</item> <!-- color for digits -->
        <item name="android:textColor">@color/orange</item> <!-- color for colon -->
        <item name="android:colorControlNormal">@color/orange</item> <!-- color for (horizontal) delimeters -->
    </style>



    <style name="TextLabel" parent="TextAppearance.Design.Hint">

    </style>

    <attr name="sc_corner_radius" format="dimension" />
    <attr name="sc_border_width" format="dimension" />
    <attr name="sc_tint_color" format="color" />
    <attr name="sc_checked_text_color" format="color" />

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textSize">16sp</item>
        <item name="colorPrimary">@color/text_colorblack</item>
    </style>

    <style name="MyTheme.NavMenu" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/black</item>
        <item name="android:textColorPrimary">@color/text_gray2</item>
    </style>

</resources>